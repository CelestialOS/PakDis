pkgname=weechat
pkgver=0.4.3
pkgrel=1
pkgdesc="console IRC client"
arch=('i686' 'x86_64')
url="http://weechat.org"
source=("http://weechat.org/files/src/$pkgname-$pkgver.tar.bz2"
	"weechat-0.4.3-remove-gettext.diff")
md5sums=('SKIP' 'SKIP')
depends=("libgcrypt")
makedepends=("autoconf" "automake" "libtool")

prepare() {
  cd "$pkgname-$pkgver"
  patch -p0 < ../weechat-0.4.3-remove-gettext.diff
}

build() {
  cd "$pkgname-$pkgver"
  ./autogen.sh
  ./configure --prefix=/ --disable-perl --disable-python --disable-ruby --disable-lua --disable-guile \
    --disable-xfer --disable-aspell --disable-tcl
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
