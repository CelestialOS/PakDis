pkgname=libuuid
pkgver=1.0.2
pkgrel=1
pkgdesc="UUID generation library"
arch=('i686' 'x86_64')
url="http://libuuid.sourceforge.net"
license=('GPL')
source=("http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('SKIP')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
