pkgname=libcddb
pkgver=1.3.2
pkgrel=1
pkgdesc="CDDB library"
arch=('i686' 'x86_64')
url="http://libcddb.sourceforge.net"
source=("http://prdownloads.sourceforge.net/libcddb/$pkgname-$pkgver.tar.bz2")
md5sums=('SKIP')
options=('strip' 'debug')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
