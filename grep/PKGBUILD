pkgname=grep
pkgver=2.20
pkgrel=1
pkgdesc="diff"
groups=("base")
arch=('i686' 'x86_64')
url="http://gnu.org/software/diffutils/"
license=('GPL')
source=("http://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.xz")
md5sums=('SKIP')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  rm "$pkgdir"/lib/charset.alias
}
