pkgname=("libjpeg")
pkgver=9a
pkgrel=1
pkgdesc="JPEG library"
arch=('i686' 'x86_64')
url="http://libjpeg.sourceforge.net"
source=("http://www.ijg.org/files/jpegsrc.v$pkgver.tar.gz")
md5sums=('SKIP')
options=('strip' 'debug')

prepare() {
  cd "jpeg-$pkgver"
}

build() {
  cd "jpeg-$pkgver"
  ./configure --prefix=/
  make
}

package() {
  cd "jpeg-$pkgver"
  make DESTDIR=$pkgdir install
}
